{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/ts/*"],
    },
  },
  "include": ["src", "tests", "types"],
  "exclude": [
    "node_modules",
    "build"
  ]
}
